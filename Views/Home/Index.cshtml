@model ScheduleViewModel
@{
    ViewData["Title"] = "Розклад занять";
}

<div class="schedule-container">
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @Model.ErrorMessage
        </div>
    }

    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Параметри пошуку</h5>
                </div>
                <div class="card-body">
                    <form id="scheduleForm">
                        <div class="mb-3">
                            <label for="selectedBlock" class="form-label">Блок</label>
                            <select id="selectedBlock" name="selectedBlock" class="form-select" required>
                                <option value="">Оберіть блок</option>
                                @foreach (var block in Model.Blocks)
                                {
                                    <option value="@block.Name">@block.Name</option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="selectedRoom" class="form-label">Аудиторія</label>
                            <select id="selectedRoom" name="selectedRoom" class="form-select" required disabled>
                                <option value="">Спочатку оберіть блок</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="selectedPeriod" class="form-label">Період</label>
                            <select id="selectedPeriod" name="selectedPeriod" class="form-select">
                                @foreach (var period in Model.PeriodOptions)
                                {
                                    <option value="@period.Value" 
                                            data-from="@period.FromDate.ToString("yyyy-MM-dd")" 
                                            data-to="@period.ToDate.ToString("yyyy-MM-dd")">
                                        @period.Label
                                    </option>
                                }
                            </select>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="fromDate" class="form-label">Від дати</label>
                                    <input type="date" id="fromDate" name="fromDate" class="form-control" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="toDate" class="form-label">До дати</label>
                                    <input type="date" id="toDate" name="toDate" class="form-control" required>
                                </div>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary w-100" id="searchBtn">
                            <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                            Знайти розклад
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Розклад занять</h5>
                    <div id="exportSection" class="d-none">
                        <a href="#" id="exportLink" class="btn btn-outline-success btn-sm" target="_blank">
                            <i class="bi bi-download"></i> Експорт iCal
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div id="scheduleContent">
                        <div class="text-center text-muted py-5">
                            <i class="bi bi-calendar3 fs-1"></i>
                            <p class="mt-3">Оберіть параметри для перегляду розкладу</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Schedule functionality is handled in site.js -->
} 